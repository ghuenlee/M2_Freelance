extends /views/layout/layout

block user
    .ui.segment.basic
        h3.ui.header.inverted
            img(class="ui circular image" src=+ (user.sexe === "Homme") ? "/static/images/male.png" : "/static/images/female.png")
            .content  #{user.nom}
block content
    .ui.container
        .ui.three.column.stackable.grid
            .two.wide.column
                a.ui.teal.icon.fluid.huge.button(id="sidebaror")
                    i.content.icon
            .ten.wide.column
                .ui.teal.inverted.segment
                    h3.ui.header
                        i.building.icon
                        .content    Détails de l'employeur ##{employeur.userID} :
            .four.wide.column
                a.ui.teal.labeled.icon.fluid.huge.button(href="/freelancer/employeurs")
                    i.reply.icon
                    | Retour
        .ui.divider
        .ui.teal.padded.segment
            .ui.teal.inverted.segment
                h4.ui.header
                    i.user.icon
                    | Informations personnelles    
            .ui.two.column.stackable.centered.grid
                .four.wide.middle.aligned.column
                    .ui.animated.orange.contactModal.button(style="margin-bottom: 1em")
                        .visible.content Contacter
                        .hidden.content
                            i.mail.icon
                    img(class="circular ui image" src=+ (employeur.sexe === "Homme") ? "/static/images/male.png" : "/static/images/female.png")                    
                    .ui.teal.inverted.center.aligned.segment
                        .ui.star.large.rating(data-rating=Math.round(employeur.note_moy_employeur) data-max-rating="10" data-content="Note moyenne calculée: "+Math.round(employeur.note_moy_employeur*100)/100+" pour "+employeur.notations.length+" contrat(s) noté(s).")
                .twelve.wide.column
                    .ui.horizontal.segments
                        .ui.padded.centered.segment
                            h4.ui.header 
                                i.user.icon 
                                .content   #{employeur.nom}
                                    .sub.header Nom
                            h4.ui.header 
                                i.ellipsis.horizontal.icon 
                                .content   #{employeur.pnom}
                                    .sub.header Prénom
                            h4.ui.header 
                                i.building.icon 
                                .content   #{employeur.nomEntreprise}
                                    .sub.header Nom d'entreprise
                            h4.ui.header
                                i(class=( employeur.sexe === "Homme") ? "male icon" : "female icon" ) 
                                .content   #{employeur.sexe}
                                    .sub.header Sexe
                            h4.ui.header 
                                i.calendar.icon 
                                .content   #{moment(employeur.dateNaiss).format('D MMMM YYYY')}
                                    .sub.header Date de naissance
                            h4.ui.header 
                                i.marker.icon 
                                .content   #{employeur.lieuNaiss}
                                    .sub.header Lieu de naissance
                        .ui.padded.segment
                            h4.ui.header
                                i.call.icon 
                                .content   #{employeur.telephone}
                                    .sub.header Numéro de téléphone
                            h4.ui.header 
                                i.at.icon                         
                                .content   #{employeur.email}
                                    .sub.header Adresse mail
                            h4.ui.header 
                                i.map.icon                         
                                .content   #{employeur.wilayaAdr}
                                    .sub.header Wilaya de résidence
                            h4.ui.header 
                                i.map.pin.icon                         
                                .content   #{employeur.communeAdr}
                                    .sub.header Commune de residence
                            h4.ui.header 
                                i.map.signs.icon                         
                                .content   #{employeur.quartierAdr}
                                    .sub.header Quartier de résidence
                            h4.ui.header 
                                i.building.outline.icon                         
                                .content   #{employeur.lotissementAdr}
                                    .sub.header Numéro de lotissement
            .ui.teal.inverted.segment
                h4.ui.header
                    i.cubes.icon
                    | Domaines d'activité        
            .ui.two.stackable.cards
                each domaine, index in employeur.domaines
                    .teal.card
                        .content
                            h4.ui.header
                                i.cube.icon 
                                .content  #{index+1} -  #{domaine.titre}
                            .description
                                | #{domaine.description}
    .ui.contact.modal
        h2.ui.header
            i.mail.icon 
            .content Informations de contact
        .content
            .ui.three.column.stackable.centered.middle.aligned.grid
                .column
                    h3.ui.center.aligned.icon.header
                        i.call.icon
                        .content #{employeur.telephone}
                            .sub.header Numéro de téléphone
                .column
                    h3.ui.center.aligned.icon.header
                        i.mail.icon
                        .content #{employeur.email}
                            .sub.header Adresse email
                .center.aligned.column
                    a.ui.labeled.icon.big.blue.contactModal.button(href="/messagerie/nouveau/?dest="+employeur.userID style="margin-bottom: 1em")
                        i.large.talk.icon
                        | Messagerie
        .center.aligned.actions
            .ui.cancel.teal.button Fermer

    