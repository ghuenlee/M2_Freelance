doctype
html
    head
        meta(name="viewport" content="width=device-width, initial-scale=1")
        <link rel="icon" type="image/png" href="/static/images/favicon.png" />
        title Fennec Freelance
        link(rel="stylesheet" href="/static/semantic/dist/semantic.min.css")
        link(rel="stylesheet" href="/static/css/main.css")
        script(src="/static/js/jquery-3.2.1.min.js")
        script(src="/static/semantic/dist/semantic.min.js")
        script(src="/static/js/main.js")
        script(src="/static/js/ajax.js")
        script(src="/static/js/jquery.tablesorter.min.js")
    body
        .ui.left.inverted.vertical.menu.sidebar
            .ui.basic.segment
                block user
                if (user.isValid === true)
                    .ui.teal.inverted.segment
                        h5.ui.center.aligned.header(data-tooltip="Profil validé.")
                            i.green.user.icon
                            | Freelancer
                else
                    .ui.teal.inverted.segment
                        h5.ui.center.aligned.header(data-tooltip="Profil non validé.")
                            i.red.user.icon
                            | Freelancer
                .ui.two.column.grid
                    .column(style="padding-right: 5px")
                        a.ui.labeled.fluid.button( href="/messagerie/recus")
                            .ui.teal.fluid.button
                                i.inbox.icon
                            .ui.basic.teal.left.pointing.label(id="msgLabel") 0
                    .column(style="padding-left: 5px")   
                        a.ui.labeled.fluid.button(href="/notifications")
                            .ui.teal.fluid.button
                                i.alarm.icon
                            .ui.basic.teal.left.pointing.label(id="notifLabel")  0     
                .ui.divider    
                .ui.large.vertical.secondary.fluid.pointing.inverted.menu
                    a(class= ( currentRoute === 'profil' ? "active item" : "item" ) href="/freelancer/") 
                        i.user.icon
                        | Profil
                    a(class= ( currentRoute === 'offres' ? "active item" : "item" ) href="/freelancer/offres") 
                        i.tasks.icon
                        | Offres
                    a(class= ( currentRoute === 'postulats' ? "active item" : "item" ) href="/freelancer/postulats") 
                        i.wait.icon
                        | Postulats
                    a(class= ( currentRoute === 'contrats' ? "active item" : "item" ) href="/freelancer/contrats") 
                        i.suitcase.icon
                        | Contrats
                    a(class= ( currentRoute === 'employeurs' ? "active item" : "item" ) href="/freelancer/employeurs") 
                        i.sitemap.icon
                        | Employeurs
                .ui.divider
                .ui.large.vertical.secondary.fluid.pointing.inverted.menu
                    a.item(href="/messagerie/nouveau/?dest=admin")
                        i.help.circle.icon
                        | Support
                    a.item
                        i.home.icon
                        | Accueil
                    a.item(href="/logout") 
                        i.power.icon
                        | Déconnexion                 
        .pusher
            block content